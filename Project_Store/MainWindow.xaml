<Window x:Class="Project_Store.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Store"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Головне меню" Width="2046" Height="1051" MinWidth="946" MinHeight="572.177">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="images\theme1.jpg"/>
        </Grid.Background>
        <Label x:Name="log" Content="admin" HorizontalAlignment="Left" Height="39" Margin="54,0,0,0" VerticalAlignment="Top" Width="64" RenderTransformOrigin="-13.798,0.756" FontSize="20" IsHitTestVisible="False" Visibility="Hidden"/>
        <Grid HorizontalAlignment="Right"  VerticalAlignment="Top" Width="54" Margin="0,-4,0,0">
            <Image Source="images/door.png" Width="Auto" Margin="-1"/>
            <Button Content="" Background="{x:Null}" Margin="2" Click="Button_Click" />
        </Grid>

        <Grid HorizontalAlignment="Left" Height="1114" VerticalAlignment="Top" Width="353" Margin="275,0,0,0">
            <StackPanel Grid.RowSpan="2" Opacity="0.75">
                <Image Source="images/texture.jpg" Height="1194" Margin="0,0,-182,0" ></Image>
            </StackPanel>

            <Button  x:Name="Товари" Content="Товари" HorizontalAlignment="Center" VerticalAlignment="Center"  Width="228" Height="86" Margin="62,410,63,618" BorderBrush="Black" BorderThickness="3,3,5,3" Click="MainTovar_Click" >
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <Button  x:Name="Замовлення" Content="Замовлення" HorizontalAlignment="Center" VerticalAlignment="Center"  Width="228" Height="86" Margin="62,542,63,486" BorderBrush="Black" BorderThickness="3,3,5,3" >
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <Button  x:Name="Клієнти" Content="Клієнти" HorizontalAlignment="Center" VerticalAlignment="Center"  Width="228" Height="86" Margin="62,666,63,360" BorderBrush="Black" BorderThickness="3,3,5,3" >
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <Button  x:Name="Журнал" Content="Журнал" HorizontalAlignment="Center" VerticalAlignment="Center"  Width="228" Height="86" Margin="62,792,63,236" BorderBrush="Black" BorderThickness="3,3,5,3">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <Button  x:Name="Вихід" Content="Вихід" HorizontalAlignment="Center" VerticalAlignment="Center"  Width="228" Height="86" Margin="62,914,63,112" BorderBrush="Black" BorderThickness="3,3,5,3" Click="Вихід_Click">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>
            <Image Source="images/logoforprogramm_white.png" Margin="54,29,49,832" Height="253" Width="250" >
                <Image.Effect>
                    <DropShadowEffect/>
                </Image.Effect>
            </Image>
            <Label Content="Glencell"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="80" Foreground="White" FontStyle="Italic" Margin="15,253,29,747" Background="#00000000" >
                <Label.Effect>
                    <DropShadowEffect/>
                </Label.Effect>
            </Label>
        </Grid>
    </Grid>

</Window>
