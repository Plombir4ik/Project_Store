        <TextBox HorizontalAlignment="Left" Height="26" Margin="171,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="125"  x:Name="BoxI" Foreground="Black" BorderBrush="Black"/>
        <TextBlock HorizontalAlignment="Left" Height="21" Margin="171,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="74" RenderTransformOrigin="0.946,0.643" Text="Ім'я" Foreground="Black"/>
